<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="250dp">

    <com.zjhj.tour.widget.LoopViewPager
        android:id="@+id/index_viewpager"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </com.zjhj.tour.widget.LoopViewPager>

    <LinearLayout
        android:id="@+id/guide_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_1"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="235dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_2"
        android:layout_marginTop="55dp"
        android:background="@drawable/rect_solid_light_white_round_15"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/search_icon"
            android:layout_marginLeft="@dimen/margin_2"
            />

        <EditText
            android:id="@+id/search_et"
            style="@style/editViewStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_2"
            android:layout_marginRight="@dimen/margin_1"
            android:textColorHint="@color/light_black"
            android:hint=""
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionSearch"
            />

        <ImageView
            android:id="@+id/clear_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/clear"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:visibility="invisible"
            />

    </LinearLayout>

</RelativeLayout>