<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        layout="@layout/lay_header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.zjhj.tour.activity.RegisterActivity"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓        名"
                    android:textSize="@dimen/text_big_x"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:hint="请输入真实姓名"
                    android:textColorHint="@color/light_black"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    />

                <ImageView
                    android:id="@+id/clear_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/clear_gray"
                    android:paddingLeft="@dimen/margin_2"
                    android:paddingRight="@dimen/margin_2"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手  机  号"
                    android:textSize="@dimen/text_big_x"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:hint="请输入手机号"
                    android:textColorHint="@color/light_black"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    android:inputType="phone"
                    android:maxLength="11"
                    />

                <ImageView
                    android:id="@+id/clear_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/clear_gray"
                    android:paddingLeft="@dimen/margin_2"
                    android:paddingRight="@dimen/margin_2"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验  证  码"
                    android:textSize="@dimen/text_big_x"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <EditText
                    android:id="@+id/code_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:hint="请输入验证码"
                    android:textColorHint="@color/light_black"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    android:maxLength="6"
                    />

                <ImageView
                    android:id="@+id/clear_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/clear_gray"
                    android:paddingLeft="@dimen/margin_2"
                    android:paddingRight="@dimen/margin_2"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/request_code"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="获取验证码"
                    android:textSize="@dimen/text_big"
                    android:textColor="@color/shop_yellow"
                    android:layout_marginRight="@dimen/margin_2"
                    android:gravity="center"
                    android:background="@drawable/rect_solid_white_stroke_yellow"
                    android:minWidth="110dp"
                    android:paddingLeft="@dimen/margin_1"
                    android:paddingRight="@dimen/margin_1"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textSize="@dimen/text_big_x"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <EditText
                    android:id="@+id/identity_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:hint="请输入身份证号"
                    android:textColorHint="@color/light_black"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    />

                <ImageView
                    android:id="@+id/clear_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/clear_gray"
                    android:paddingLeft="@dimen/margin_2"
                    android:paddingRight="@dimen/margin_2"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导游证号"
                    android:textSize="@dimen/text_big_x"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <EditText
                    android:id="@+id/guide_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:hint="请输入导游证号"
                    android:textColorHint="@color/light_black"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    />

                <ImageView
                    android:id="@+id/clear_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/clear_gray"
                    android:paddingLeft="@dimen/margin_2"
                    android:paddingRight="@dimen/margin_2"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推  荐  人"
                    android:textSize="@dimen/text_big_x"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <EditText
                    android:id="@+id/recommend_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:hint="请输入推荐人手机号"
                    android:textColorHint="@color/light_black"
                    android:textSize="@dimen/text_big"
                    android:background="@null"
                    android:inputType="phone"
                    android:maxLines="11"
                    />

                <ImageView
                    android:id="@+id/clear_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/clear_gray"
                    android:paddingLeft="@dimen/margin_2"
                    android:paddingRight="@dimen/margin_2"
                    android:visibility="gone"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:textSize="@dimen/text_big_x"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    android:text="上传身份证照片"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2"
                    android:layout_marginLeft="@dimen/margin_2"
                    >

                    <LinearLayout
                        android:id="@+id/identit_ll"
                        android:layout_width="165dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rect_solid_color_backgoundgary_round_5"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/camera"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击上传身份证正面"
                            android:textSize="@dimen/text_big"
                            android:textColor="#aaaaaa"
                            android:layout_marginTop="@dimen/margin_2"
                            />

                    </LinearLayout>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/identit_image"
                        android:layout_width="165dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        fresco:fadeDuration="2000"
                        fresco:placeholderImage="@mipmap/img_default"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:progressBarAutoRotateInterval="2000"
                        fresco:progressBarImage="@drawable/progress"
                        fresco:progressBarImageScaleType="centerInside"
                        fresco:actualImageScaleType="centerCrop"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        />


                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:textSize="@dimen/text_big_x"
                    android:textStyle="bold"
                    android:textColor="@color/shop_black"
                    android:text="上传导游证照片"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_2"
                    android:layout_marginLeft="@dimen/margin_2"
                    >

                    <LinearLayout
                        android:id="@+id/guide_ll"
                        android:layout_width="165dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/rect_solid_color_backgoundgary_round_5"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/camera"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击上传导游证"
                            android:textSize="@dimen/text_big"
                            android:textColor="#aaaaaa"
                            android:layout_marginTop="@dimen/margin_2"
                            />

                    </LinearLayout>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/guide_image"
                        android:layout_width="165dp"
                        android:layout_height="100dp"
                        android:scaleType="fitXY"
                        fresco:fadeDuration="2000"
                        fresco:placeholderImage="@mipmap/img_default"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:progressBarAutoRotateInterval="2000"
                        fresco:progressBarImage="@drawable/progress"
                        fresco:progressBarImageScaleType="centerInside"
                        fresco:actualImageScaleType="centerCrop"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:text="提交"
                android:textColor="@color/shop_white"
                android:textSize="@dimen/text_big_x"
                android:gravity="center"
                android:background="@drawable/selector_pressed_color_blue_round_5"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="@dimen/margin_2"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>




