<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjhj.tour.activity.FoodDetailActivity">

    <include
        layout="@layout/lay_header"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_header"
        android:layout_above="@+id/lay_bottom"
        ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/lay_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_50dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/shop_yellow"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/purcase"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="加入购物车"
                android:textSize="@dimen/text_big_x"
                android:textColor="@color/shop_yellow"
                android:textStyle="bold"
                android:background="@drawable/selector_press_bg_color_white"
                />

            <TextView
                android:id="@+id/buy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="立即预定"
                android:textSize="@dimen/text_big_x"
                android:textColor="@color/shop_white"
                android:textStyle="bold"
                android:background="@drawable/selector_press_bg_color_yellow"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
