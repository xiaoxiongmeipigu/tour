<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjhj.tour.activity.discuss.DiscussActivity"
    android:background="@color/background_gray"
    >

    <include
        layout="@layout/lay_header"
        />

    <com.zjhj.tour.widget.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_header"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_45dp"
                android:gravity="center"
                android:background="@color/shop_white"
                android:text=""
                android:textColor="@color/light_black"
                android:textStyle="bold"
                android:textSize="@dimen/text_big"
                android:layout_marginTop="15dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/shop_white"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="菜品质量"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_big_x"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <RatingBar
                    android:id="@+id/ratingBarOne"
                    style="@style/fiveRatingBarGray"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_1"
                    >
                </RatingBar>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/shop_white"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="餐厅环境"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_big_x"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <RatingBar
                    android:id="@+id/ratingBarTwo"
                    style="@style/fiveRatingBarGray"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_1"
                    >
                </RatingBar>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/shop_white"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="上菜速度"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_big_x"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <RatingBar
                    android:id="@+id/ratingBarThree"
                    style="@style/fiveRatingBarGray"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_1"
                    >
                </RatingBar>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/shop_white"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="司陪餐质量"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_big_x"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <RatingBar
                    android:id="@+id/ratingBarFour"
                    style="@style/fiveRatingBarGray"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_1"
                    >
                </RatingBar>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_45dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/shop_white"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="交通方便程度"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_big_x"
                    android:layout_marginLeft="@dimen/margin_2"
                    />

                <RatingBar
                    android:id="@+id/ratingBarFive"
                    style="@style/fiveRatingBarGray"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_1"
                    >
                </RatingBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shop_white"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                android:layout_marginTop="15dp"
                android:minHeight="100dp"
                >

                <EditText
                    android:id="@+id/content_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="请输入评价"
                    android:textColorHint="#aaaaaa"
                    android:padding="@dimen/margin_2"
                    android:gravity="top"
                    android:background="@null"
                    />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/margin_10dp"
                ></android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height_50dp"
                android:background="@drawable/selector_pressed_color_blue_round_5"
                android:text="提交评价"
                android:textSize="@dimen/text_big_xx"
                android:textColor="@drawable/selector_press_text_color_blue"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:layout_marginBottom="@dimen/margin_3"
                />


        </LinearLayout>
    </com.zjhj.tour.widget.MyScrollview>

</RelativeLayout>
