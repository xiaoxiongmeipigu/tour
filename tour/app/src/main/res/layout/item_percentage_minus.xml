<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shop_white"
    android:padding="@dimen/margin_2"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_big_x"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014-12-12 03:323:23"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/light_black"
            android:layout_marginTop="@dimen/margin_1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-300"
        android:textColor="@color/shop_green"
        android:textSize="@dimen/text_big_xx"
        android:textStyle="bold"
        />

</LinearLayout>