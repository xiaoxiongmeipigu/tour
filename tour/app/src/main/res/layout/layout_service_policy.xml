<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="17dp"
    android:paddingBottom="17dp"
    android:paddingLeft="@dimen/margin_2"
    android:paddingRight="@dimen/margin_2"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="酒店政策"
        android:textSize="@dimen/text_big_xx"
        android:textColor="@color/shop_black"
        android:textStyle="bold"
        android:gravity="center_vertical"
        />
    
    <LinearLayout
        android:id="@+id/accept_booking_time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp"
        >
        
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="接收预订时间段："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/accept_booking_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:maxLines="1"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.3"
            />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/booking_time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="可预订时间："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/booking_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/children_price_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="儿童价格："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/children_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay_type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="支付方式："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/pay_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dining_time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="用餐时间："
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            />

        <TextView
            android:id="@+id/dining_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/text_big"
            android:textColor="@color/shop_black"
            android:lineSpacingMultiplier="1.3"
            />

    </LinearLayout>

</LinearLayout>